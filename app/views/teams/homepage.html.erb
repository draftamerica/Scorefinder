<p class="searchform">
Search a scoreboard by week:
</p>
<br>

<%= form_with url: "/display_weekly_data", local:true do |form| %>
    <%= form.select(:week, options_for_select(@weeksarray.uniq)) %> <br />
    <%= form.submit %>
<% end %>

